type Review {
    attachment: Attachment
    body: String!
    author: User!
    product: Product!
}

extend type User @key(fields: "id") {
    id: ID! @external
    reviews: [Review]
}

extend type Product @key(fields: "upc") {
    upc: String! @external
    reviews: [Review]
}

extend type Mutation {
    addReview(authorID: String! upc: String!, review: String!): Review!
}
